read -d '' TEMPLATE_APACHE_SITES_AVAILABLE_HTTPS <<EndOfMessage
#
# %s
#
<VirtualHost *:443>
    include includes/%s.general
    include includes/log
    include includes/%s.ssl
</VirtualHost>
EndOfMessage

